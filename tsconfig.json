{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next",
      },
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@compo/*": ["./src/components/*"],
      "@icons/*": ["./src/icons/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@public/*": ["./public/*"],
    },
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "esm": false,
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts",
    "scripts/seed.mjs",
    "./type.d.ts",
  ],
  "exclude": ["./node_modules"],
}
